<h3 class="page-title">News</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <%= link_to "Home", :controller => "administrator/news", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        
        <li>
        <a href="#">News</a>
        </li>
    </ul>
</div>


<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-user "></i>
            <span class="caption-subject bold uppercase">News List</span>
            
        </div>
        <div class="actions">
            <%= link_to('/administrator/news/new', {:name => 'New News',:title=>'New News',:class=>"btn btn-circle btn-primary"}) do %>
                <i class="fa fa-plus"></i>
                <span class="hidden-480">New</span>
            <% end %>
        </div>
    </div>

  <div class="portlet-body"><!-- Begin body -->
        <table class="table table-bordered">
            <tr>
                <th>Title</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
    <% @news.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= link_to "Edit",{:controller=>"administrator/news",:action=>"edit",:id=>t.id},:class=>"btn btn-sm btn-warning" %></td>
        <td><%= link_to "Delete",{ :controller=>"administrator/news",:action=>"destroy", :id=> t.id }, {:method => :delete,:class=>"btn btn-sm btn-danger",:data => {:confirm => 'Are you sure?'}} %></td>
      </tr>
    <% end %>
 
      </table>

  </div><!-- End Body -->
</div><!-- End Portlet -->