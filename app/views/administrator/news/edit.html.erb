
<h3 class="page-title">News</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <%= link_to "Home", :controller => "administrator/home", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        <li>
            <%= link_to "News", :controller => "administrator/news", :action => "index" %>
            <i class="fa fa-angle-right"></i>
            </li>
        <li>
        <a href="#">Edit</a>
        </li>
    </ul>
</div>


<div class="portlet box green">
	<div class="portlet-title">
        <div class="caption">
            <i class="fa fa-pencil"></i>
            Edit News
        </div>
    </div>
							
 	<div class="portlet-body form">
 		<%= form_for @news,url: {action: "update"} do |f| %>
 		<div class="form-body">
		  <div class="form-group" style="text-align:left">
		    <label for="transaction_name" style="text-align:left">Title</label>
		    <%= text_field(:news, :title,class:"form-control",placeholder:"Title") %>
		  </div>

		  <div class="form-group" style="text-align:left">
		    <label for="transaction_name" style="text-align:left">Content</label>
		    <%= text_area(:news, :content,class:"form-control",placeholder:"Username") %>
		  </div>
		  
		</div>

		  <div class="form-actions">
		  	<input type="submit" class="btn green" value="Add"> 
		  	<a href="#" class="btn back-cancel default">Cancel</a>
		  </div>
		<% end %>
 	</div>
</div>	
<script>
	$(document).ready(function(){
		$('textarea').summernote({height:400});
	})
</script>				
						       