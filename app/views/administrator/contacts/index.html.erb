<h3 class="page-title">Contact</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <%= link_to "Home", :controller => "administrator/contacts", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        
        <li>
        <a href="#">Contact</a>
        </li>
    </ul>
</div>

<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-user "></i>
            <span class="caption-subject bold uppercase">Contact List</span>
            
        </div>
        <div class="actions">
            <%= link_to('/administrator/contacts/new', {:name => 'New User',:title=>'New User',:class=>"btn btn-circle btn-primary"}) do %>
                <i class="fa fa-plus"></i>
                <span class="hidden-480">New</span>
            <% end %>
        </div>
    </div>
    <div class="portlet-body"><!-- Begin body -->
        <table class="table table-bordered">
          <tr>
            <th>Subject</th>
            <th>Email</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
  
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.subject %></td>
        <td><%= contact.email %></td>
        <td><%= link_to "Edit",{:controller=>"administrator/contacts",:action=>"edit",:id=>contact.id},:class=>"btn btn-sm btn-warning" %></td>
        <td><%= link_to "Delete",{ :controller=>"administrator/contacts",:action=>"destroy", :id=> contact.id }, {:method => :delete,:class=>"btn btn-sm btn-danger",:data => {:confirm => 'Are you sure?'}} %></td>
      </tr>
    <% end %>
 
    </table>
</div><!-- End Body -->
</div><!-- End Portlet -->
